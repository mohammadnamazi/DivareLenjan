@model Divar.Core.ViewModel.RegisterViewModel

@{
    ViewData["Title"] = "ثبت نام";
}

<div class="container">
    <div class="row">
        <div dir="rtl" class="col-lg-4 col-lg-offset-4 col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3 col-xs-10 col-xs-offset-1">
            <h4 class="text-center">وارد حساب کاربری خود شوید</h4>
            <hr />
            <form asp-action="Register">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
               
                <div class="form-group">
                   
                    <input asp-for="Mobile" class="form-control" placeholder="شماره تلفن همراه را وارد نمایید" />
                    <span asp-validation-for="Mobile" class="text-danger"></span>
                    
                </div>
                <div class="form-group">
                    
                    <input asp-for="Password" class="form-control" placeholder="رمز عبور دلخواه را وارد نمایید" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                   
                    <input asp-for="ConfirmPassword" class="form-control" placeholder="تکرار رمز عبور را وارد نمایید" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="ثبت نام" class="btn-red pull-right" />
                    <a asp-action="Login" class="btn-red pull-left">صفحه ورود</a>
                </div>
            </form>
        </div>
    </div>
</div>

