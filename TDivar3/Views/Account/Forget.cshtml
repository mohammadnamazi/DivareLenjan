@model Divar.Core.ViewModel.ForgetViewModel

@{
    ViewData["Title"] = "Forget";
}

<div class="container">
    <div class="row">
        <div dir="rtl" class="col-lg-4 col-lg-offset-4 col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3 col-xs-10 col-xs-offset-1">
            <h4 class="text-center">دریافت کد برای تغییر رمز عبور</h4>
            <hr />
            <form asp-action="Forget">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    @*<label asp-for="Mobile" class="control-label"></label>*@
                    <input asp-for="Mobile" class="form-control" placeholder="شماره موبایل را وارد نمایید" />
                    <span asp-validation-for="Mobile" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="ارسال" class="btn-red pull-right" />
                    <a asp-action="Login" class="btn-red pull-left">بازگشت!</a>
                </div>
            </form>
        </div>
    </div>
</div>

