<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width,nitial-scale=1" />
    <title>@ViewBag.Title</title>
    <link href="~/css/admin.css" rel="stylesheet" />
    <link href="~/lib/bootstrap/css/bootstrap-rtl.min.css" rel="stylesheet" />
    <script src="https://kit.fontawesome.com/a6da5501a8.js" crossorigin="anonymous"></script>
</head>
<body>
    <div class="ct" id="t1">
        <div class="ct" id="t2">
            <div class="ct" id="t3">
                <div class="ct" id="t4">
                    <div class="ct" id="t5">
                        <ul id="menu">
                            <a href="#t1"><i class=" icon fas fa-users-cog" id="pln1"></i></a>
                            <br />
                            <a href="#t2"><li class="icon fas fa-users" id="pln2"></li></a>
                            <br />
                            <a href="#t3"><li class="icon fas fa-clipboard-list" id="pln3"></li></a>
                            <br />
                            <a href="#t4"><li class="icon fas fa-money-bill-alt" id="pln4"></li></a>
                            <br />
                            <a href="#t5"><li class="icon fas fa-list-ol" id="pln5"></li></a>
                            <br />
                            <a asp-action="LogOut" asp-controller="Account"><i class="fas fa-sign-out-alt icon"></i></a>
                        </ul>

                        <div class="page" id="p1" asp-ac>
                            @await Component.InvokeAsync("AdminPanelComponent")
                        </div>                        
                        <div class="page" id="p2">
                            @await Component.InvokeAsync("AdminComponent")
                        </div>
                        <div class="page" id="p3">
                            @await Component.InvokeAsync("AdminsAdvertsComponent")
                        </div>
                        <div class="page" id="p4">
                            <div class="alert alert-info text-center">
                                <h3 class="text-center">این امکان به زودی راه اندازی میشود</h3>
                            </div>
                        </div>
                        <div class="page" id="p5">
                            <div class="alert alert-info text-center">
                                <h3 class="text-center">این امکان به زودی راه اندازی میشود</h3>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
    <div>
        @RenderBody()
    </div>
    <script src="~/lib/jQuery/jquery-1.10.2.min.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap-rtl.min.js"></script>
</body>
</html>
