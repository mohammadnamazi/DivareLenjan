@model System.Collections.Generic.IEnumerable<DataAccessLayer.Entites.Advert>


<div class="col-lg-8 col-lg-offset-2 col-md-8 col-md-offset-2 col-sm-10 col-sm-offset-1 col-xs-12 col-xs-offset-0 mg-top-60 fc-black">

    <table class="table table-hover">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Date)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Seen)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IsExpire)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Category.Name)
                </th>
                <th> ویژگی ها</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Date)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Seen)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsExpire)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Category.Name)
                    </td>
                    <td>
                        <a href="#" onclick='ShowAdvertField(@item.Id)' class="btn-edit"><i class="fas fa-eye"></i></a> |
                        <a href="#" onclick='ShowFactor(@item.Id)' class="btn-detail"><i class="fas fa-trash"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>

<div id="myModal" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div id="bodyModal" class="modal-body">

            </div>
        </div>
    </div>
</div>

<script>
    function ShowAdvertField(id) {
        $.ajax({
            url: "/Admins/ShowFields/" + id,
            type: "Get",
            data: {}
        }).done(function (result) {
            $('#myModal').modal('show');
            $('#bodyModal').html(result);
        });
    }
</script>

<script>
    function ShowFactor(id) {
        $.ajax({
            url: "/Admins/DeleteAdvert/" + id,
            type: "Get",
            data: {}
        }).done(function (result) {
            $('#myModal').modal('show');
            $('#bodyModal').html(result);
        });
    }
</script>