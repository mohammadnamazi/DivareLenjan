@model IEnumerable<DataAccessLayer.Entites.AdvertField>

@{
    ViewData["Title"] = "ShowAdvertFields";
}


<div class="col-lg-8 col-lg-offset-2 col-md-8 col-md-offset-2 col-sm-10 col-sm-offset-1 col-xs-12 col-xs-offset-0">

    <p class="text-center" style="margin-bottom: 30px">
        <a href="#" class="btn-red" onclick='AddField(@ViewBag.MyId)'>ویژگی جـدیـد</a>
    </p>

    <table class="table table-hover" dir="rtl">
        <thead>
            <tr>
                <th>
                    <center>
                        @Html.DisplayNameFor(model => model.Field.Name)
                    </center>
                </th>
                <th>
                    <center>
                        @Html.DisplayNameFor(model => model.FieldValue)
                    </center>
                </th>
                <th><center>عملیات</center></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <center>
                            @Html.DisplayFor(modelItem => item.Field.Name)
                        </center>
                    </td>
                    <td>
                        <center>
                            @Html.DisplayFor(modelItem => item.FieldValue)
                        </center>
                    </td>
                    <td>
                        <center>
                            <a href="#" onclick='DeleteField(@item.Id)' class="btn-delete"><i class="fas fa-trash"></i></a>
                        </center>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>

<div id="myModal" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div id="bodyModal" class="modal-body">

            </div>
        </div>
    </div>
</div>

<script>
    function AddField(id) {
        $.ajax({
            url: "/Advert/AddAdvertFields/" + id,
            type: "Get",
            data: {}
        }).done(function (result) {
            $('#myModal').modal('show');
            $('#bodyModal').html(result);
        });
    }
</script>
<script>
    function DeleteField(id) {
        $.ajax({
            url: "/Advert/DeleteAdvertField/" + id,
            type: "Get",
            data: {}
        }).done(function (result) {
            $('#myModal').modal('show');
            $('#bodyModal').html(result);
        });
    }
</script>
