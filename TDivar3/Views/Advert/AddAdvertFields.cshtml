@model Divar.Core.ViewModel.AddAdvertFieldViewModel

@{
    Layout = "~/Views/Shared/_ModalLayout.cshtml";
}

<!DOCTYPE html>

<div class="row">
    <div dir="rtl" class=" text-center col-lg-8 col-lg-offset-2 col-md-8 col-md-offset-2 col-sm-10 col-sm-offset-1 col-xs-12 col-xs-offset-0 mg-top-60">
        <form asp-action="AddAdvertFields">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                @Html.DropDownList("FieldId", null, htmlAttributes: new { @class = "form-control" })
            </div>
            <div class="form-group">
                <input asp-for="Value" class="form-control" , placeholder="مقدار" />
                <span asp-validation-for="Value" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="ثبت ویژگی" class="btn-red pull-right" />
                <a asp-action="ShowAdvertFields" asp-controller="Advert" asp-route-id="@Model.Id"  class="btn-red pull-left">بازگشت </a>
            </div>
        </form>
    </div>
</div>
